{
  "manifest_version": 3,
  "name": "Network Diagnose",
  "version": "0.1.0",
  "description": "Show connection stats and highlight problematic network requests.",
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Network Diagnose"
  }
}
